{
  "name": "@rs/portfolio",
  "version": "2025.0.1",
  "scripts": {
    "dev": "turbo dev",
    "dev:website": "turbo run dev --filter=website",
    "dev:design": "turbo run dev --filter=@rs/design --filter=playground",
    "lint": "turbo lint",
    "build": "turbo build",
    "build:website": "turbo run build --filter=website",
    "build:design": "turbo run build --filter=@rs/design --filter=playground",
    "build:turbo": "turbo lint && turbo build && pnpm install",
    "publish-packages": "turbo run build lint && changeset version && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@changesets/cli": "^2.29.5",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.5.0"
}
